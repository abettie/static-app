{
  "permissions": {
    "allow": [
      "Read(**)",
      "Write(./infrastructure/**.tf)",
      "Write(./frontend/src/**)",
      "Write(./frontend/public/**)",
      "Write(./backend/src/**)",
      "Write(./backend/tests/**)",
      "Write(./**/*.md)",
      "Write(./**/*.json)",
      "Write(./**/*.yml)",
      "Write(./**/*.yaml)",
      "Bash(cd *)",
      "Bash(ls *)",
      "Bash(pwd)",
      "Bash(cat *)",
      "Bash(grep *)",
      "Bash(find *)",
      "Bash(node *)",
      "Bash(npm install*)",
      "Bash(npm run build)",
      "Bash(npm run dev)",
      "Bash(npm run test*)",
      "Bash(npm run lint*)",
      "Bash(npm run format*)",
      "Bash(npx prettier*)",
      "Bash(npx eslint*)",
      "Bash(terraform init)",
      "Bash(terraform plan*)",
      "Bash(terraform validate)",
      "Bash(terraform fmt*)",
      "Bash(git status)",
      "Bash(git diff*)",
      "Bash(git log*)",
      "Bash(git branch:*)",
      "Bash(git add*)",
      "Bash(git commit*)",
      "Bash(git pull:*)",
      "Bash(gh issue list:*)",
      "Bash(gh issue view:*)",
      "Bash(gh pr create:*)",
      "Bash(AWS_PROFILE=terraform-master; terraform plan:*)"
    ],
    "deny": [
      "Bash(sudo:*)",
      "Bash(rm -rf:*)",
      "Read(.env.*)",
      "Read(id_rsa)",
      "Read(id_ed25519)",
      "Write(./**/.env*)",
      "Write(./**/package-lock.json)",
      "Write(./**/yarn.lock)",
      "Write(./**/pnpm-lock.yaml)"
    ]
  },
  "env": {
    "NODE_ENV": "development"
  }
}
